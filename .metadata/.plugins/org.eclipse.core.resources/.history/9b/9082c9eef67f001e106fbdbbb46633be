FROM alpine
RUN apk --no-cache add openjdk16 mc net-tools iputils-ping
RUN mkdir -p /usr/share/demo-backend/transformations
ADD ./lib/* /usr/share/demo-backend/
ADD ./target/demo-backend-1.0.0-SNAPSHOT.jar /usr/share/demo-backend/demo-backend.jar
WORKDIR /usr/share/demo-backend
ENV PORT 9090
ENV SERVER_ID Server
ENV FRONTEND_HOST frontend.local
ENV FRONTEND_PORT 8080
ENV DEBUG "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=0.0.0.0:8000"
CMD ["sh", "-c", "java $DEBUG -jar demo-backend.jar $PORT $SERVER_ID $FRONTEND_HOST $FRONTEND_PORT"]